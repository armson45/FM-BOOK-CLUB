---
import "../assets/styles/global.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title></title>
	</head>
	<body>
		<div class="hero-container shadow">
			<main class="wrapper">
				<Header />
				<slot name="hero" />
			</main>
		</div>
		<div class="wrapper">
			<slot />
		</div>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		/* base font size */
		--fs-pre-3: 34px;
		--fs-pre-4: 24px;
		--fs-pre-5: 20px;
		--fs-pre-7: 14px;

		/* 62, 38, 50, 34, 24, 20, 18, 16, 14 */

		/* fluid font size 38px -> 62px */
		--fs-1-fluid: clamp(
			2.375rem,
			1.3035714285714286rem + 5.357142857142857vw,
			3.875rem
		);
		/* 34px -> 50px */
		--fs-2-fluid: clamp(
			2.125rem,
			1.4107142857142858rem + 3.571428571428571vw,
			3.125rem
		);
		/* 24px -> 34px */
		--fs-3-fluid: clamp(
			1.5rem,
			1.0535714285714286rem + 2.2321428571428568vw,
			2.125rem
		);
		/* 16px -> 18px */
		--fs-6-fluid: clamp(
			1rem,
			0.9107142857142857rem + 0.4464285714285714vw,
			1.125rem
		);

		/* font weight */
		--fw-regular: 400;
		--fw-semibold: 600;
		--fw-bold: 800;

		/* line heigth */
		--lh-compact: 1.1;
		--lh-tight: 1.2;
		--lh-snug: 1.3;
		--lh-normal: 1.4;

		/* Letter spacing */
		--ls-xx-tight: -2px;
		--ls-x-tight: -1px;
		--ls-tight: -0.5px;

		/* text preset */
		--text-1-fluid: var(--fw-bold) var(--fs-1-fluid) / var(--lh-tight)
			"Martian Mono";
		--text-2-fluid: var(--fw-semibold) var(--fs-2-fluid) / var(--lh-snug)
			"Martian Mono";
		--text-3-static: var(--fw-semibold) var(--fs-pre-3) / var(--lh-compact)
			"Martian Mono";
		--text-3-fluid: var(--fw-semibold) var(--fs-3-fluid) / var(--lh-compact)
			"Martian Mono";
		--text-4-static: var(--fw-semibold) var(--fs-pre-4) / var(--lh-compact)
			"Martian Mono";
		--text-5-static: var(--fw-regular) var(--fs-pre-5) / var(--lh-normal)
			"Inter";
		--text-6-fluid: var(--fw-semibold) var(--fs-6-fluid) / var(--lh-snug)
			"Martian Mono";
		--text-7-static: var(--fw-regular) var(--fs-pre-7) / var(--lh-tight)
			"Martian Mono";
	}

	html {
		font-family: "Martian Mono";
	}

	.hero-container {
		min-height: 100dvh;
		background-image: url("/images/pattern-light-bg.svg");
		background-position: top;
		border-bottom-left-radius: 1rem;
		border-bottom-right-radius: 1rem;
		background-color: var(--neutral-100);
	}

	main {
		min-height: inherit;
		padding-block: 2rem 5rem;
	}

	.wrapper {
		max-width: 1300px;
		width: 95%;
		margin-inline: auto;
	}
</style>
