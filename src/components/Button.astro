---
import ArrowDownIcon from "../assets/images/icon-arrow-down.svg";

const { text, icon = true, footer = false } = Astro.props;
---

<button
   type="button"
   class={`primary-button on-hover ${footer ? "footer-button on-hover-alt" : "membership-options"}`}
>
   <a href="#membership">
      {text}

      {
         icon && (
            <span>
               <ArrowDownIcon />
            </span>
         )
      }
   </a>
</button>

<style>
   .primary-button {
      background: transparent;
      border: 2px solid var(--neutral-900);
      text-transform: uppercase;
      border-radius: 8px;

      gap: 16px;
      padding-block: 16px;
      width: 100%;
      
      & a {
         display: flex;
         justify-content: space-evenly;
         align-items: center;
         color: inherit;
      }
   }

   .on-hover {
      --grad: var(--gradient);
      background: var(--grad) calc(100% - var(--p, 0%)) / var(--p, 0%) no-repeat;
      transition:
         0.4s,
         background-position 0s;
   }

   .on-hover-alt {
      --grad: var(--gradient-alt);
   }

   .on-hover:hover,
   .on-hover-alt:hover {
      cursor: pointer;
      --p: 100%;
   }

   .membership-options {
      font: var(--text-6-fluid);
      letter-spacing: var(--ls-x-tight);
      background-color: var(--light-salmon-50);

      & svg {
         color: var(--neutral-900);
      }
   }

   .footer-button {
      background-color: var(--neutral-900);
      border-color: var(--neutral-0);
      color: var(--neutral-0);
      font: var(--text-6-fluid);
      letter-spacing: var(--ls-x-tight);
      margin-bottom: 24px;
      margin-top: 40px;
      & svg {
         color: var(--neutral-0);
         transform: rotate(180deg);
      }
   }
</style>
