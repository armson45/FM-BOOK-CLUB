---
import BenefitsImageMobile from "../assets/images/image-read-together-mobile.webp";
import BenefitsImageTablet from "../assets/images/image-read-together-tablet.webp";
import BenefitsImageDesktop from "../assets/images/image-read-together-desktop.webp";
---

<section class="features-section">
   <div>
      <h2>Read together, grow together</h2>
      <ul class="features-list">
         <li>Monthly curated tech reads selected by industry experts</li>
         <li>Virtual and in-person meetups for deep-dive discussions</li>
         <li>Early access to new tech book releases</li>
         <li>Author Q&A sessions with tech thought leaders</li>
      </ul>
   </div>

   <picture class="features-image">
      <source media="(width >= 1024px)" srcset={BenefitsImageDesktop.src} />
      <source media="(width >= 768px)" srcset={BenefitsImageTablet.src} />
      <img src={BenefitsImageMobile.src} alt="People reading together sideview" />
   </picture>
</section>

<style>

   .features-section {
      display: flex;
      flex-direction: column;
      gap: 40px;
      margin-block: 64px;
   }

   .features-image{
      overflow: clip;
      & img {
         border-radius: 12px;
      }
   }

   h2 {
      font: var(--text-2-fluid);
      letter-spacing: var(--ls-x-tight);
      color: var(--neutral-900);
   }

   .features-list {
      margin-top: 24px;
   }

   .features-list li::before {
      content: url("../../public/images/icon-check.svg");
      position: absolute;
      top: 10%;
      left: 0;
      width: 1.5rem;
      height: 1.5rem;
      display: inline-block;
   }

   .features-list li {
      position: relative;
      font: var(--text-5-static);
      color: var(--neutral-700);
      letter-spacing: var(--ls-tight);
      padding-left: 2.5rem;
      margin-bottom: 24px;
   }

   @media (width>=1024px) {
      .features-section{
         flex-direction: row-reverse;
         align-items: center;
         margin-block: 120px;
      }
   }
</style>
